            </intent-filter>
        </activity>
        <activity
            android:label="@string/app_name"
            android:name=".Menu"
            android:theme="@android:style/Theme.Black.NoTitleBar" >
            <intent-filter >
                <action android:name="com.garagecoding.firstproject.MENU" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:label="@string/app_name"
            android:name=".Subtraction"
            android:theme="@android:style/Theme.Black.NoTitleBar" >
            <intent-filter >
                <action android:name="com.garagecoding.firstproject.SUBTRACTION" />
